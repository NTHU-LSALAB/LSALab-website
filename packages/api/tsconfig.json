{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
